<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="action_window_implantation">
            <field name="name">Implantations</field>
            <field name="res_model">tipwit_base.implantation</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.actions.act_window" id="action_window_eleve">
            <field name="name">Elèves</field>
            <field name="res_model">tipwit_base.eleve</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('suivi', '=', 'pari')]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('tipwit_base.base_eleve_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('pari.pari_eleve_form_view_inherit')})]"/>
            <field name="context">{'search_default_groupby_implantation': 1, 'default_suivi': 'pari'}</field>
        </record>
        <record model="ir.actions.act_window" id="action_window_intervenant">
            <field name="name">Intervenants</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_groupby_fonction': 1}</field>
        </record>
        <!-- Top menu item -->
        <menuitem name="PARI" id="menu_root" groups="pari.group_pari_user"/>
        <!-- menu categories -->
        <menuitem name="Mes élèves" id="menu_eleve" parent="pari.menu_root" action="pari.action_window_eleve" sequence="1"/>
        <menuitem name="Mes contacts" id="menu_contacts" parent="pari.menu_root" sequence="2"/>
        <menuitem name="Implantations" id="menu_implantation" parent="pari.menu_contacts" action="pari.action_window_implantation" sequence="2"/>
        <menuitem name="Intervenants" id="menu_intervenant" parent="pari.menu_contacts" action="pari.action_window_intervenant" sequence="3"/>
    </data>
</odoo>
