<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <record id="tipwit_base.module_category_tipwit" model="ir.module.category">
            <field name="description">Gère les éléves, écoles, personnel et tous les documents associés</field>
            <field name="name">Tipwit</field>
            <field name="sequence">4</field>
        </record>
        <record id="group_tipwit_restrict" model="res.groups">
            <field name="name">Accès restreints</field>
            <field name="category_id" ref="tipwit_base.module_category_tipwit"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_tipwit_user" model="res.groups">
            <field name="name">Accès utilisateur</field>
            <field name="category_id" ref="tipwit_base.module_category_tipwit"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('tipwit_base.group_tipwit_restrict'),)]"/>
        </record>


        <record id="group_tipwit_manager" model="res.groups">
            <field name="name">Administrateur</field>
            <field name="category_id" ref="tipwit_base.module_category_tipwit"/>
            <field name="implied_ids" eval="[(4, ref('tipwit_base.group_tipwit_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record model="ir.rule" id="tipwit_eleve_rule">
            <field name="name">tipwit eleve rule</field>
            <field name="model_id" search="[('model','=','tipwit_base.eleve')]" model="ir.model"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('implantation_id','in', user.allowed_implantation_ids.ids)]</field>
        </record>
    </data>
</odoo>
