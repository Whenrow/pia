<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="base_intervenant_form_view" model="ir.ui.view">
            <field name="name">tipwit_base.intervenant.form</field>
            <field name="model">res.partner</field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="fonction"/>
                                <field name="telephone"/>
                                <field name="email"/>
                                <field name="implantation_id"/>
                                <field name="user_id" string="Utilisateur" groups="tipwit_base.group_tipwit_manager"/>
                            </group>
                            <group/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="base_intervenant_tree_view" model="ir.ui.view">
            <field name="name">tipwit_base.intervenant.tree</field>
            <field name="model">res.partner</field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="fonction"/>
                </tree>
            </field>
        </record>

        <record id="base_intervenant_search_view" model="ir.ui.view">
            <field name="name">tipwit_base.intervenant.search</field>
            <field name="model">res.partner</field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <group expand="0" string="Group By">
                        <filter string="Fonction" name="groupby_fonction" domain="[]" context="{'group_by': 'fonction'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="tipwit_base.action_window_intervenant">
            <field name="name">Intervenants</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('base_intervenant_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('base_intervenant_form_view')})]"/>
            <field name="context">{'search_default_groupby_fonction': 1}</field>
        </record>
        <record id="tipwit_user_form_view_inherit" model="ir.ui.view">
            <field name="name">tipwit.user.form.view.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_simple_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='phone']" position="before">
                    <field name="implantation_ids" widget="many2many_tags" string="Implantations"/>
                </xpath>
            </field>
        </record>
        <record model="ir.actions.act_window" id="tipwit_base.action_window_user">
            <field name="name">Utilisateurs</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('base.view_users_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('tipwit_base.tipwit_user_form_view_inherit')})]"/>
        </record>
    </data>
</odoo>
