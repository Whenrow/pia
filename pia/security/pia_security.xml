<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <record id="pia.module_category_operations_pia" model="ir.module.category">
            <field name="description">Gère les éléves, écoles, personnel et tous les documents associés</field>
            <field name="name">Pia</field>
            <field name="sequence">4</field>
        </record>
        <record id="group_pia_restrict" model="res.groups">
            <field name="name">Accès restreints</field>
            <field name="category_id" ref="pia.module_category_operations_pia"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_pia_user" model="res.groups">
            <field name="name">Integration</field>
            <field name="category_id" ref="pia.module_category_operations_pia"/>
            <field name="implied_ids" eval="[(4, ref('pia.group_pia_restrict'))]"/>
        </record>
        <record id="group_pia_logo" model="res.groups">
            <field name="name">Logo</field>
            <field name="category_id" ref="pia.module_category_operations_pia"/>
            <field name="implied_ids" eval="[(4, ref('pia.group_pia_user'))]"/>
        </record>

        <record id="group_pia_manager" model="res.groups">
            <field name="name">Administrateur</field>
            <field name="category_id" ref="pia.module_category_operations_pia"/>
            <field name="implied_ids" eval="[(4, ref('pia.group_pia_logo'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record model="ir.rule" id="pia_eleve_rule">
            <field name="name">pia eleve rule</field>
            <field name="model_id" search="[('model','=','pia.eleve')]" model="ir.model"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('implantation_id','in', user.allowed_implantation_ids.ids)]</field>
        </record>

        <record model="ir.rule" id="pia_conseil_rule">
            <field name="name">pia conseil rule</field>
            <field name="model_id" search="[('model','=','pia.conseil')]" model="ir.model"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('implantation_id','in', user.allowed_implantation_ids.ids)]</field>
        </record>

        <record model="ir.rule" id="pia_synthese_rule">
            <field name="name">pia synthese rule</field>
            <field name="model_id" search="[('model','=','pia.synthese.logo')]" model="ir.model"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('implantation_id','in', user.allowed_implantation_ids.ids)]</field>
        </record>
    </data>
</odoo>
