<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="pia_eleve_form_view_inherit" model="ir.ui.view">
            <field name="name">pia.eleve.form</field>
            <field name="model">tipwit_base.eleve</field>
            <field name="inherit_id" ref="tipwit_base.base_eleve_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='image_1920']" position="before">
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_conseil" type="object" class="oe_stat_button" icon="fa-users" context="{'search_default_groupby_annee': 1}">
                            <field name="conseil_count" widget="statinfo" string="CdC"/>
                        </button>
                        <button name="action_view_bilan" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="bilan_count" widget="statinfo" string="Bilans logopédiques"/>
                        </button>
                        <button name="action_view_reunion" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="reunion_count" widget="statinfo" string="Réunions" />
                        </button>
                        <button name="action_view_synthese" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="synthese_count" widget="statinfo" string="Synthèses" />
                        </button>
                        <button name="action_view_entretien" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="entretien_count" widget="statinfo" string="Informations complémentaires" />
                        </button>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="action_view_synthese" model="ir.actions.act_window">
            <field name="name">Synthèses logo</field>
            <field name="res_model">pia.synthese.logo</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Créer une synthèse logo
              </p>
            </field>
        </record>

        <record id="action_view_reunion" model="ir.actions.act_window">
            <field name="name">Réunions de parents</field>
            <field name="res_model">pia.reunion.parents</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Créer une réunion de parents
              </p>
            </field>
        </record>

        <record id="action_view_conseil" model="ir.actions.act_window">
            <field name="name">Conseils de Classe</field>
            <field name="res_model">pia.conseil</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Créer un conseil de classe
              </p>
            </field>
        </record>

        <record id="action_view_entretien" model="ir.actions.act_window">
            <field name="name">Informations complémentaires</field>
            <field name="res_model">pia.entretien</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Créer une information complémentaire
              </p>
            </field>
        </record>

        <record id="action_view_bilan" model="ir.actions.act_window">
            <field name="name">Bilans logopédiques</field>
            <field name="res_model">pia.bilan.logo</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Créer un bilan logopédique
              </p>
            </field>
        </record>

    </data>
</odoo>
