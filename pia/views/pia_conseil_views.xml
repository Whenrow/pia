<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="pia_conseil_form_view" model="ir.ui.view">
            <field name="name">pia.conseil.form</field>
            <field name="model">pia.conseil</field>
            <field name="arch" type="xml">
                <form string="conseil">
                    <sheet string="conseil">
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="eleve_id"/>
                                <field name="implantation_id"/>
                                <field name="trouble_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="responsable_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Intervenants">
                                <field name="intervenant_ids">
                                    <tree delete="1">
                                        <field name="name"/>
                                        <field name="fonction"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Observations">
                                <group>
                                    <field name="observation"/>
                                    <field name="autre"/>
                                    <field name="ressource"/>
                                    <field name="besoin"/>
                                </group>
                            </page>
                            <page string="Objectifs">
                                <field name="objectifs_ids">
                                    <tree>
                                        <field name="objectif"/>
                                        <field name="moyen"/>
                                        <field name="is_logo"/>
                                        <field name="is_instit"/>
                                        <field name="is_titulaire"/>
                                        <field name="outil"/>
                                        <field name="evaluation"/>
                                        <field name="commentaire"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="AR" attrs="{'invisible': [('trouble_ids', '=', [])]}">
                                <field name="allowed_amenagement_ids" invisible="1"/>
                                <field name="amenagement_ids" domain="[('id', 'in', allowed_amenagement_ids)]">
                                    <tree>
                                        <field name="trouble"/>
                                        <field name="type"/>
                                        <field name="name"/>
                                        <field name="commentaire"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Décisions">
                                <group>
                                    <field name="a_faire"/>
                                </group>
                            </page>
                            <page string="Retour de CdC">
                                <group>
                                    <field name="entretien"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pia_conseil_tree_view" model="ir.ui.view">
            <field name="name">pia.conseil.tree</field>
            <field name="model">pia.conseil</field>
            <field name="arch" type="xml">
                <tree string="Conseil">
                    <field name="name"/>
                    <field name="eleve_id"/>
                    <field name="annee_scolaire"/>
                </tree>
            </field>
        </record>

        <record id="pia_conseil_search_view" model="ir.ui.view">
            <field name="name">pia.conseil.search</field>
            <field name="model">pia.conseil</field>
            <field name="arch" type="xml">
                <search string="Année">
                    <field name="name"/>
                    <group expand="0" string="Group By">
                        <filter string="Année" name="groupby_annee" domain="[]" context="{'group_by': 'annee_scolaire'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>
