<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="pia_objectif_form_view" model="ir.ui.view">
            <field name="name">pia.objectif.form</field>
            <field name="model">pia.objectif</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                                <field name="objectif"/>
                                <field name="moyen"/>
                                <field name="outil"/>
                                <field name="commentaire"/>
                        </group>
                        <group>
                            <group>
                                <field name="evaluation"/>
                            </group>
                            <group>
                                <field name="is_instit"/>
                                <field name="is_logo"/>
                                <field name="is_titulaire"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pia_objectif_tree_view" model="ir.ui.view">
            <field name="name">pia.objectif.tree</field>
            <field name="model">pia.objectif</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="objectif"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
