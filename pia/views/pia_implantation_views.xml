<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="pia_implantation_form_view" model="ir.ui.view">
            <field name="name">pia.implantation.form</field>
            <field name="model">pia.implantation</field>
            <field name="arch" type="xml">
                <form string="Implantations">
                    <sheet string="Implantations">
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="fase"/>
                                <field name="reseau"/>
                            </group>
                            <group>
                                <field name="direction"/>
                                <field name="email"/>
                                <field name="telephone"/>
                                <field name="gsm"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="pia_implantation_tree_view" model="ir.ui.view">
            <field name="name">pia.implantation.tree</field>
            <field name="model">pia.implantation</field>
            <field name="arch" type="xml">
                <tree string="Implantations">
                    <field name="name"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
