<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="pia_bilan_logo_form_view" model="ir.ui.view">
            <field name="name">pia.bilan.logo.form</field>
            <field name="model">pia.bilan.logo</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="bilan_type" required="1"/>
                                <field name="eleve_id" required="1"/>
                                <field name="date_naissance"/>
                                <field name="implantation_id"/>
                                <field name="annee_scolaire"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="test_ids" widget="many2many_tags"/>
                                <field name="etalonnage_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <group>
                            <field name="anamnese"/>
                            <field name="comportement"/>
                        </group>
                        <notebook>
                            <page string="Analyses">
                                <field name="ana_ids">
                                    <tree>
                                        <field name="epreuve_id"/>
                                        <field name="note_pre" string="Note année précédente"/>
                                        <field name="ecart_type_pre" string="Écart-type année précédente (&#x03C3;)"/>
                                        <field name="note"/>
                                        <field name="ecart_type" string="Écart-type (&#x03C3;)"/>
                                        <field name="performance"/>
                                        <field name="commentaire"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Conclusion">
                                <group>
                                    <field name="conclusion"/>
                                    <field name="projet"/>
                                </group>
                            </page>
                            <page string="AR">
                                <field name="amenagement_ids">
                                    <tree>
                                        <field name="trouble"/>
                                        <field name="type"/>
                                        <field name="name"/>
                                        <field name="commentaire"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pia_bilan_logo_ana_form_view" model="ir.ui.view">
            <field name="name">pia.bilan.logo.ana_form</field>
            <field name="model">pia.bilan.ana</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="test_id"/>
                            <field name="allowed_epreuve_ids" invisible="1"/>
                            <field name="bilan_id" invisible="1"/>
                            <field name="epreuve_id" domain="[('id', 'in', allowed_epreuve_ids)]"/>
                        </group>
                        <group>
                            <group>
                                <field name="note_pre"/>
                                <field name="ecart_type_pre"/>
                            </group>
                            <group>
                                <field name="note"/>
                                <field name="ecart_type"/>
                            </group>
                        </group>
                        <group>
                            <field name="performance"/>
                            <field name="commentaire"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="pia_bilan_logo_test_epreuve_tree_view" model="ir.ui.view">
            <field name="name">pia.bilan.logo.test.epreuve.tree</field>
            <field name="model">pia.bilan.test.epreuve</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="test_id"/>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="pia_bilan_logo_tree_view" model="ir.ui.view">
            <field name="name">pia.bilan.logo.tree</field>
            <field name="model">pia.bilan.logo</field>
            <field name="arch" type="xml">
                <tree string="Bilans">
                    <field name="eleve_id"/>
                    <field name="annee_scolaire"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
